- model_class = Page
.page-header
  %h1=t '.title'
= link_to t('new', default: t("helpers.links.new")), new_admin_page_path, class: 'btn btn-primary'
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:title)
      %th=t '.actions', default: t("helpers.actions")
  %tbody
    - @pages.each do |page|
      %tr
        %td= link_to page.id, page_path(page)
        %td= link_to page.title, page_path(page)
        %td
          = link_to t('.edit', default: t("helpers.links.edit")), edit_admin_page_path(page), class: 'btn btn-mini'
          = link_to t('.destroy', default: t("helpers.links.destroy")), admin_page_path(page), method: :delete, data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-mini btn-danger'

= link_to t('new', default: t("helpers.links.new")), new_admin_page_path, class: 'btn btn-primary'
